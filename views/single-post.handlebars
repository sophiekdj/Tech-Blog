<div class="posts">
  <article class="card">
    <h2 class="blog-post-title">
      <a href="/post/{{id}}">
        {{title}}</a>
    </h2>
    <div class="blog-post-meta">
      Posted by
      {{user.name}}
      on
      {{format_date date_created}}
    </div>
    <div class="card-body">
      {{content}}
    </div>
  </article>
  <!-- /.blog-post -->

  {{#if Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash;
              {{User.username}},
              {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}
  <!-- /.post-comment -->

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{id}}" />

      <label class="form-label" for="comment-content">Comment</label>

      <textarea name="comment-content" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>
<!-- /.new comment form -->

<script src="/js/comment.js"></script>