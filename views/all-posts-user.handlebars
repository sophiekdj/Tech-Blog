<div class="posts">
  {{#each posts}}
    <article class="card">
      <h2 class="blog-post-title">
        <a href="/post/{{id}}">
          {{title}}</a>
      </h2>
      <div class="blog-post-meta">
        Posted by
        {{user.name}}
        on
        {{format_date date_created}}

      </div>

      <div class="card-body">
        {{content}}
      </div>
    </article>
  {{/each}}
</div>
